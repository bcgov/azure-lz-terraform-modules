{
    "name": "Deploy-Private-DNS-SAI",
    "type": "Microsoft.Authorization/policyAssignments",
    "apiVersion": "2022-06-01",
    "properties": {
      "displayName": "Deploy Private DNS Zone for Azure ServicesAI Private Endpoints",
      "description": "This policy automatically creates and links private DNS zones for Azure ServicesAI private endpoints.",
      "metadata": {
        "version": "1.0.0",
        "category": "Cognitive Services (ServicesAI)"
      },
      "policyDefinitionId": "${root_scope_resource_id}/providers/Microsoft.Authorization/policyDefinitions/Deploy-Private-DNS-SAI",
      "parameters": {
        "defaultPrivateDnsZoneId": {
          "value": "/subscriptions/[[subscriptionId]]/resourceGroups/[[resourceGroupName]]/providers/Microsoft.Network/privateDnsZones/privatelink.cognitiveservices.azure.com"
        },
        "servicesaiPrivateDnsZoneId": {
          "value": "/subscriptions/[[subscriptionId]]/resourceGroups/[[resourceGroupName]]/providers/Microsoft.Network/privateDnsZones/privatelink.services.ai.azure.com"
        },
        "effect": {
          "value": "DeployIfNotExists"
        }
      }
    },
    "location": "${default_location}",
    "identity": {
      "type": "SystemAssigned"
    }
  }
  